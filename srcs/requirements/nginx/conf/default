server {
	server_name ${DOMAIN_NAME};
	listen 443 ssl;

	ssl_certificate     /etc/nginx/ssl/omansour.crt;
	ssl_certificate_key /etc/nginx/ssl/omansour.key;
	ssl_protocols       TLSv1.3;

	root /var/www/html;
	index index.php;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass wordpress:9000;
	}
}

